# Configuration Production VEG'N BIO
# Variables d'environnement pour le déploiement en production

# Base de données
DATABASE_URL=jdbc:postgresql://localhost:5432/vegn_bio_prod
DATABASE_USERNAME=vegn_bio_user
DATABASE_PASSWORD=vegn_bio_secure_2024!
DATABASE_DRIVER=org.postgresql.Driver

# Profil Spring
SPRING_PROFILES_ACTIVE=prod

# JWT Configuration
JWT_SECRET=vegn_bio_jwt_secret_key_2024_production_secure
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://vegnbio.fr,https://www.vegnbio.fr
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Serveur
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/vegn-bio-production.log

# Email (optionnel pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@vegnbio.fr
SMTP_PASSWORD=your_email_password

# Upload de fichiers
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10MB

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Monitoring
ACTUATOR_ENABLED=true
METRICS_ENABLED=true

# Sécurité
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800

# Frontend
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_ENVIRONMENT=production

# Mobile
MOBILE_API_URL=http://localhost:8080/api
MOBILE_PUSH_NOTIFICATIONS=true
